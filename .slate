config defaultToCurrentScreen true

# Resize Bindings
bind right:alt       resize +10% +0
bind left:alt        resize -10% +0
bind up:alt          resize +0   -10%
bind down:alt        resize +0   +10%

# Push Bindings
bind right:ctrl;cmd  push right bar-resize:screenSizeX/2
bind left:ctrl;cmd   push left  bar-resize:screenSizeX/2
bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2
bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2
bind f:ctrl;cmd      corner top-left resize:screenSizeX;screenSizeY
bind right:ctrl;alt;cmd corner bottom-right resize:screenSizeX/2;screenSizeY/2
bind left:ctrl;alt;cmd corner top-left resize:screenSizeX/2;screenSizeY/2
bind up:ctrl;alt;cmd corner top-right resize:screenSizeX/2;screenSizeY/2
bind down:ctrl;alt;cmd corner bottom-left resize:screenSizeX/2;screenSizeY/2

# Window Hints
bind esc:cmd hint
